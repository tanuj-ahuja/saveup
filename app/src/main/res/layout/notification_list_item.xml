<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="monospace"
        android:id="@+id/ebay_notification_results_title"
        android:padding="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_price"
        android:id="@+id/new_price"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="@+id/ebay_notification_results_newprice"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toRightOf="parent"
        android:textSize="15sp"
        android:fontFamily="monospace"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="monospace"
        android:text="HELL"
        android:textColor="@color/green"
        android:id="@+id/ebay_notification_results_newprice"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ebay_notification_results_title"
        app:layout_constraintRight_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="HEY"
        android:fontFamily="monospace"
        android:textColor="@color/red"

        android:id="@+id/ebay_notification_results_oldprice"
        app:layout_constraintTop_toBottomOf="@+id/ebay_notification_results_newprice"
        app:layout_constraintRight_toLeftOf="parent"
        android:padding="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/old_price"
        android:id="@+id/old_price"
        android:textColor="@color/colorPrimary"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/new_price"
        app:layout_constraintTop_toTopOf="@+id/ebay_notification_results_oldprice"
        app:layout_constraintLeft_toRightOf="parent"
        android:textSize="15sp"
        android:fontFamily="monospace"/>


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#dadada"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />


</android.support.constraint.ConstraintLayout>